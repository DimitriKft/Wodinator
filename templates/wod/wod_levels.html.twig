{% extends 'base.html.twig' %}

{% block title %}Wods choice{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center">

        <h1>{{ wod.name }}</h1>
    </div>
    <div class="row d-flex justify-content-center">
        <div class="col-12 col-md-6 col-lg-4 col-xl-3">
            <div class="card border-primary mb-3 mx-auto card-wod" style="maw-width:20rem">
                <div class="card-header text-center">
                    <img src="../{{ wod.wodbegginer }}" class="card-img-top" alt="">
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4 col-xl-3">
            <div class="card border-primary mb-3 mx-auto card-wod" style="maw-width:20rem">
                <div class="card-header text-center">
                    <img src="../{{ wod.wodintermediate }}" class="card-img-top" alt="">
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4 col-xl-3">
            <div class="card border-primary mb-3 mx-auto card-wod" style="maw-width:20rem">
                <div class="card-header text-center">
                    <img src="../{{ wod.woddifficult }}" class="card-img-top" alt="">
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <p>{{ wod.description }}</p>
    </div>
    <div class="d-flex justify-content-center">
        <iframe width="560" height="315" src="{{ wod.video }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
{% endblock %}
