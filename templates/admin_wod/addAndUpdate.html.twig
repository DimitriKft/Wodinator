{% extends 'base.html.twig' %}

{% block title %}Modification{% endblock %}


{% block body %}
{{ form_start(form) }}
    <div class="row">
        <div class="col-6">
            {% if isUpdate %}
                <img style="width:25%" src="{{ asset('images/aliments/' ~ wod.image) }}" alt="">
            {% endif %}
            <div>{{ form_row(form.name, {"attr": {'class':'text-danger bg-success'},"label":"Nom du wod"}) }}</div>
            <div>{{ form_row(form.description)}}</div>
        </div>
        <div class="col-6">
            {{ form_widget(form) }}
        </div>
    </div>
    <input type="submit" class="btn btn-primary" value="Enregistrer">
{{ form_end(form) }}


{% endblock %}


