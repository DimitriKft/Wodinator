{% extends 'base.html.twig' %}

{% block title %}Hello WodController!{% endblock %}

{% block body %}
<a class="btn btn-success" href="{{ path('admin_wod_create') }}">Ajouter</a>
    <div class="row">
        {% for wod in wods %}
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card border-primary mb-3 mx-auto card-wod" style="maw-width:20rem">
                    <div class="card-header text-center">
                        <img src="{{ asset(wod.image) }}" class="card-img-top" alt="">
                    </div>
                   
                    <div class="d-flex justify-content-center">
                        <a class="btn btn-primary align-center training-btn" href="{{ path('display_wod', {'id': wod.id}) }}">S'entrainer</a>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a class="btn btn-danger align-center" href="{{ path('admin_wod_update', {'id': wod.id}) }}">Modifier</a>
                        <form method="POST" style="display:inline-block" action="{{ path('admin_wod_delete', {'id': wod.id}) }}" onsubmit="return confirm('Confirmer la suppression ?')">
                            <input type="hidden" name="_method" value="delete">
                            <input type="hidden" name="_token" value="{{ csrf_token('SUP' ~ wod.id) }}">
                            <input type="submit" class="btn btn-warning align-center" value="supprimer">
                        </form>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
